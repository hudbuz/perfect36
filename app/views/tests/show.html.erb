        $('#'+resp[i].section.title).append('<li>Your Response: '+ resp[i]["answer_choice"]+'   ‚ùå   <button class="btn btn-danger" onclick="showAnswer()"> See Answer </button><div type="hidden" value="'+resp[i]["section"]["id"]+'"></div><div id="answer"></div>'+'</li>')
      }
      else {
          $('#'+resp[i].section.title).append('<li>Your Response: '+ resp[i]["answer_choice"]+'     Correct<div type="hidden" vale="'+resp[i]["section"]["id"]+'></div </li>')
      }
      }
      $.get('/answer_keys/'+data['answer_key_id'], function(resp){
        $('#showTestFrame')[0].src = resp.url
      })
    } )






  })





