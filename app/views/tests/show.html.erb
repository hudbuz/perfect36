      $('#mathScore').html(data["math_score"])
      $('#readingScore').html(data["reading_score"])
      $('#scienceScore').html(data["science_score"])
      $('#totalScore').html(data["total_score"])

      var resp = data["responses"]
      for (i = 0; i < resp.length; i ++) {
